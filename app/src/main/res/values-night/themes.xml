<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark application theme -->
    <style name="Theme.EmailManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_background_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        
        <!-- Custom attributes -->
        <item name="chipBackgroundColor">@color/chip_background_color_dark</item>
        <item name="chipTextColor">@color/chip_text_color_dark</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.EmailManager.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.EmailManager.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.EmailManager.LargeComponent</item>
    </style>

    <!-- Custom styles for dark theme -->
    <style name="Widget.EmailManager.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="hintTextColor">@color/primary_light</item>
    </style>

    <style name="Widget.EmailManager.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/primary_light</item>
    </style>

    <style name="Widget.EmailManager.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="Widget.EmailManager.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?attr/chipBackgroundColor</item>
        <item name="android:textColor">?attr/chipTextColor</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>
</resources>